<div class="position-fixed" id="help">
    <a id="askbtn" class="btn">
        <strong><%= pageL.help.text%></strong>
        <br>
        <span><%= pageL.help.textAsk %></span>
    </a>
</div>
<article>
    <div id="underNav" class="row marginT-100">
        <div class="container">
            <h1><%= pageL.undernav.text1 %></h1>
            <img id="map" src="/img/map.png" style="display:inline-block" alt="Map">
            <h3 style="display:inline-block"><%= pageL.undernav.text2 %></h3>
        </div>
        <div id="myCrousel" class="carousel slide" data-bs-ride="carousel">
            <div id="carouselImgs" class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/vaccination1.jpg" class="d-block w-100" alt="Vaccination">
                </div>
                <div class="carousel-item">
                    <img src="/img/vaccination2.jpg" class="d-block w-100" alt="Vaccination">
                </div>
                <div class="carousel-item">
                    <img src="/img/vaccination3.jpg" class="d-block w-100" alt="Vaccination">
                </div>
            </div>
        </div>
    </div>
</article>
<div class="marginT-30"></div>
<div class="container" id="vcPortal">
    <%= pageL.vcPortal %>
</div>
<div id="main" class="container">
    <h1 class="marginT-30 marginB-30"><%= pageL.main.h1 %></h1>
    <div class="row">
        <div class="col-lg-5 col-sm-12 col-md-5 topleftborderraduis" id="rightMain1">
            <h3><%= pageL.main.rightMain1.h3 %></h3>
            <p>
                <%= pageL.main.rightMain1.p %>
            </p>
            <form action="/chercherCenter" method="post">
                <fieldset>
                    <legend></legend>
                    <div class="form-group">
                        <input type="text" name="city" class="form-control" id="city" aria-describedby="cityHelp" placeholder="Enter city">
                    </div>
                    <button type="submit" class="btn btn-primary"><%= pageL.main.rightMain1.form1.submit %></button>
                </fieldset>
            </form>
        </div>
        <div class="col-lg-1 col-md-1"></div>
        <div class="marginT-30"></div>
        <div class="col-lg-5 col-sm-12 col-md-5 topleftborderraduis " id="leftMain2">
            <h3><%= pageL.main.leftMain2.h3 %></h3>
            <a class="btn btn-primary"><%= pageL.main.leftMain2.a %></a>
        </div>
    </div>
    <div class="marginT-30"></div>
    <div class="row marginT-30">
        <div class="w-50 mx-auto">
            <h4 style="display: inline-block"><%= pageL.log.h4 %> </h4>
            <a style="display: inline-block" class="btn btn-success" href="/users/login"><%= pageL.log.a %></a>
        </div>
    </div>
    <div class="marginT-30"></div>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="resources">
        <div class="col">
            <div class="card resource">
                <div class="card-body textAlignCenter">
                    <h5 class="card-title"><i class="fas fa-shield-alt"></i></h5>
                    <p class="card-text"><a href="<%= '/' + pageL.lang + '/facts' %>  "><%= pageL.resources.p1 %></a></p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resource">
                <div class="card-body textAlignCenter">
                    <h5 class="card-title"><i class="fas fa-book"></i></h5>
                    <p class="card-text"><a href="#"><%= pageL.resources.p2  %></a></p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resource">
                <div class="card-body textAlignCenter">
                    <h5 class="card-title"><i class="fas fa-question"></i></h5>
                    <p class="card-text"><a href="#"><%= pageL.resources.p3 %></a></p>
                </div>
            </div>
        </div>
    </div>

</div>

