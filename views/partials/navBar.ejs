        <a id="navbarBrand" class="navbar-brand" href="/">
            <img id="imgBrand" style="display: inline-block" src="/img/icon.png" alt="" width="30" height="24">
            <div id="brandText" style="display: inline-block">
                <h6>COVID-19</h6>
                <h6>VACCINE</h6>
            </div>
        </a>
<select id="lang">
    <option value="en">English</option>
    <option value="fr">Francais</option>
    <option value="ar">Arabic</option>
</select>
    </div>
</nav>

<script>
    $( "#lang" )
        .change(function() {
            $( "select option:selected" ).each(function() {
                let Params = window.location.href.split('/')
                Params[Params.length-1] = this.value;
                window.location.href = Params.join('/');
            });
        })
        // .trigger( "change" );
</script>

