<div class="marginT-120"></div>
<div class="container">
    <div class="row mt-5">
        <form action="/users/resetpassword" method="post">
            <fieldset>
                <legend>Reset password</legend>
                <%- include('./messages.ejs') %>
                <input type="text" name="token" hidden value="<%= typeof token != 'undefined' ? token : '' %>">
                <div class="form-group">
                    <label for="password1">Mot de pass</label>
                    <input type="password" name="password1" class="form-control" id="password1" aria-describedby="password1Help" placeholder="Enter password" value="<% typeof name != 'undefined' ? name : '' %>" >
                    <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec qui que ce soit.</small>
                </div>
                <div class="form-group">
                    <label for="Password2">Confirme Mot de passe</label>
                    <input type="password" name="password2" class="form-control" id="Password2" placeholder="Mot de passe">
                </div>
                <button data-sitekey="6Lc5rtoaAAAAAE4kzLLdtW0XLnOpCGHMfuXACA0t"
                        data-callback='onSubmit'
                        data-action='submit'
                        type="submit"
                        class="btn btn-primary">Submit</button>
            </fieldset>
        </form>
    </div>
</div>


