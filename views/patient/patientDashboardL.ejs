%>
<div class="shadow p-3 mb-5 bg-body rounded row mt-5" style="display: flex;justify-content: center;">
    <% if (typeof appointment !== 'undefined'){ %>
    <div class="card col">
        <div class="card-body <%=ar_text_alignment%>">
            <h5 class="card-title"><%= dashboard.cardTitle %> <i class="fas fa-check-circle greenColor"></i></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%=dashboard.h6%></h6>
            <p class="card-text">
                <input type="text" id="appointmentDate" value="<%=appointment.date%>" hidden/>
            <h4> <i class="fas fa-calendar-check"></i> <%= dashboard.h4%> </h4>
            <p id="appointmentDateP" class="lead text-capitalize"><%= moment(appointment.date).format("dddd MMMM Do YYYY")%> | <%= appointment.dayRange === 'am' ? ' Matin' : "AprÃ¨s-midi"%> </p>
            <h5><i class="fas fa-hospital"></i> <%=dashboard.h5%> </h5>
            <p class="lead"><%= appointment.center%> </p>
            </p>
        </div>
    </div>
    <%} else {%>

        <form method="post" action="/users/demander_rendez-vous">
            <input type="text" hidden name="_userId" value="<%= user._id %>">
            <button class="btn btn-success" id="demanderRdv"><%=dashboard.button%><i class="fas fa-calendar-check"></i></button>
        </form>

    <%}%>
</div>



